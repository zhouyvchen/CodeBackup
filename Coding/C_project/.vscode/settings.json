{
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "workbench.iconTheme": "vscode-icons",
  "editor.fontLigatures": true,
  "editor.mouseWheelZoom": true,
  "files.autoSave": "afterDelay",
  "editor.fontFamily": "JetBrains Mono, Source DejaVu",
  "editor.fontWeight": "300",
  "workbench.preferredDarkColorTheme": "One Dark Pro",
  //自定义编辑器语法颜色与字形
  "editor.tokenColorCustomizations": {
    //设置关键字颜色、字体样式（斜体，加粗）
    "keywords": {
      "fontStyle": "italic"
    },
    //设置变量颜色、字体样式
    "variables": {
      "fontStyle": ""
    },
    //设置字符串颜色、字体样式
    "strings": {
      "fontStyle": "italic"
    }
  },
  "editor.fontSize": 18,
  "markdown-preview-enhanced.codeBlockTheme": "codeblock.css",
  "markdown-preview-enhanced.previewTheme": "one-light.css",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[markdown]": {
    // 快速补全
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    // snippet 提示优先（看个人喜欢）
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": "on",
    "files.trimTrailingWhitespace": false,
    "editor.fontFamily": "霞鹜文楷, JetBrain Mono",
    "editor.fontSize": 18,
    "editor.lineNumbers": "interval"
  },
  "markdown.preview.fontFamily": "霞鹜文楷, JetBrain Mono",
  "editor.snippetSuggestions": "top",
  "liveServer.settings.donotShowInfoMsg": true,
  "vsicons.dontShowNewVersionMessage": true,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "redhat.telemetry.enabled": true,
  "wordcount_cjk.activateLanguages": ["markdown", "plaintext"],
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "window.commandCenter": true,
  "zenMode.fullScreen": false,
  "leetcode.endpoint": "leetcode-cn",
  "leetcode.workspaceFolder": "C:\\Users\\bokeboke\\.leetcode",
  "files.associations": {
    "*.go": "go",
    "malloc.h": "c",
    "iostream": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "*.tcc": "cpp",
    "cctype": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "optional": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "fstream": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "new": "cpp",
    "ostream": "cpp",
    "sstream": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "typeinfo": "cpp",
    "1.C": "cpp"
  },
  "C_Cpp.errorSquiggles": "disabled"
}
